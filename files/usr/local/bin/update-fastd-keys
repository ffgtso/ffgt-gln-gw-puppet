#!/bin/bash /usr/local/include/ffgt_gln_gw-update.common 

# CONFIGURE THIS TO YOUR PEER DIRECTORY
FASTD_ROOT=/etc/fastd/

pull() {
  for FASTD_PEER in $(find ${FASTD_ROOT} -type d -name peers); do
    if [ -d "${FASTD_PEER}/.git" ] ; then
      cd "$FASTD_PEER"
      git pull -q
    fi
  done 
}

reload() {
  pkill -HUP -x fastd 
}
