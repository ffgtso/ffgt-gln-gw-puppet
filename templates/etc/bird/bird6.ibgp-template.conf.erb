  return true;
}

# template for ibgp route exchange
template bgp ibgp {
  table mesh;
  local as <%= @our_as %>;
  import filter {
    if is_default() then accept;
    if in_prefix_range_ibgp() then accept;
    reject;
  };
  export filter {
    if is_default() then accept;
    if in_prefix_range_ibgp() then accept;
    reject;
  };
};
<% peerings = YAML.load_file(@gre_yaml); -%>
<% peerings.each_pair do |gretun,node| -%>
<% @peers.each do |tunnel,pref| -%>
<% if gretun == tunnel -%>

protocol bgp ibgp_<%= tunnel.gsub('-', '_') %> from ibgp {
    source address <%= node['ipv6src'] %>;
    neighbor <%= node['ipv6dst'] %> as <%= @our_as %>;
    default bgp_local_pref <%= pref %>;
}
<% end -%>
<% end -%>
<% end -%>
