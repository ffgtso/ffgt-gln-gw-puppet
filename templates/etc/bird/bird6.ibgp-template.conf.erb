function ok_to_export_<%= @name.gsub('-', '_') %>_ibgp() {
  if (source = RTS_BGP || source = RTS_STATIC_DEVICE || source = RTS_STATIC || source = RTS_DEVICE) then {
<% if @dont_export_prefix != "none" -%>
    if (net ~ [<%= @dont_export_prefix %>]) then return false;
<% end -%>
    return true;
  }
  return false;
}

<% peerings = YAML.load_file(@gre_yaml); -%>
<% peerings.each_pair do |gretun,node| -%>
<% @peers.each do |tunnel,pref| -%>
<% if gretun == tunnel -%>
protocol bgp i_<%= tunnel.gsub('-', '_') %> {
  table mesh;
  local as <%= @our_as %>;
  source address <%= node['ipv6src'] %>;
  neighbor <%= node['ipv6dst'] %><% if node['ipv6dst'].match(/^fe80:/i) %> % '<%= tunnel %>'<% end -%> as <%= @our_as %>;
  bfd graceful;
  import filter {
<% if node['import_filter6'] != "" -%>
    include "/etc/bird/bird6.conf.d/<%= node['import_filter6'] %>";
<% end -%>
    bgp_local_pref = <%= pref %>;
<% if @dfz != "" -%>
    if is_default() then accept;
<% end -%>
    if in_prefix_range_ibgp() then accept;
    reject;
  };
  export filter {
    if ((65535, 65282) ~ bgp_community) then {
      reject;
    }

    if (proto = "o_p_<%= @mesh_code.gsub('-', '_') %>") then reject;
    if ok_to_export_<%= @name.gsub('-', '_') %>_ibgp() then accept;
    reject;
  };
<% if @next_hop_self != "" -%>  next hop self;
<% end -%>
<% if @bgp_options != "" -%>  <%= @bgp_options %>
<% end -%>
}

<% end -%>
<% end -%>
<% end -%>
