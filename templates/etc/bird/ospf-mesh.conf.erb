# this file is generated by puppet

# bird OSPF configuration

table ospf_<%= @mesh_code %>;

# pipe between mesh and ospfmesh_<%= @mesh_code %> table
# import only if not in own network.
protocol pipe pipe_ospf_<%=@mesh_code%> {
  table mesh;
  peer table ospf_<%= @mesh_code %>;
  import all; # where ! is_self_<%=@mesh_code %>();
  export all; # where source = RTS_BGP || source = RTS_STATIC;
};

<% if @have_ospf_peerings == "yes" %>
<% peerings = YAML.load_file(@ospf_peerings); -%>
<% peerings.each_pair do |name,node| -%>
protocol static ospf_<%=name%> {
  import all;
  table mesh;
  route <%= node['ipv4src'] %> via "ospf-<%=name%>";
}
<% end -%>

protocol ospf bb_<%= @mesh_code %> {
  table mesh;
#  table ospf_<%= @mesh_code %>;
  import all;
  #import where !is_default();
  export filter {
    if (source = RTS_STATIC || is_in_<%= @mesh_code %>_prefix() || is_default()) then accept;
    reject;
  };

  # Backbone
  area 0 {
    networks {
      <%= @range_ipv4 %>;
    };
<% peerings = YAML.load_file(@ospf_peerings); -%>
<% peerings.each_pair do |name,node| -%>
    interface "ospf-<%=name%>" {
      cost <%= node['cost'] %>;
      type pointopoint;
      hello 5; retransmit 2; wait 10; dead 20;
      check link;
      authentication none;
    };

<% end -%>
  };
}
<% end %>

<% if @have_ospf_links == "yes" %>
<% peerings = YAML.load_file(@ospf_links); -%>
<% peerings.each_pair do |name,node| -%>
protocol static ospf_<%=name%> {
  import all;
  table mesh;
  <% $ipv4_prefix    = ip_prefix(node['ipv4src'] + '/31') %>
  route <%= ipv4_prefix %>/31 via "ospf-<%=name%>";
}
<% end -%>

protocol ospf int_<%= @mesh_code %> {
  table mesh;
#  table ospf_<%= @mesh_code %>;
  import all;
  #import where !is_default();
#  export all;
  export filter {
    if (source = RTS_STATIC || is_in_<%= @mesh_code %>_prefix() || is_default()) then accept;
    reject;
  };

  # Links between bgp? & gw??
  area 10 {
<% peerings = YAML.load_file(@ospf_links); -%>
<% peerings.each_pair do |name,node| -%>
    interface "ospf-<%=name%>" {
      cost <%= node['cost'] %>;
      type pointopoint;
      hello 5; retransmit 2; wait 10; dead 20;
      check link;
      authentication none;
    };

<% end -%>
    interface "br-<%= @mesh_code %>" {
      cost 70;
      stub;
    };
  };
}
<% end %>
