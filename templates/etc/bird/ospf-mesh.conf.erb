# this file is generated by puppet

# bird OSPF configuration

table ospfmesh_<%= @mesh_code %>;

protocol ospf uplink_<%= @mesh_code %> {
  table mesh;
  import all;
  #import where !is_default();
  export filter {
    if (source = RTS_STATIC || is_in_<%= @mesh_code %>_prefix() || is_default()) then accept;
    reject;
  };

<% if @have_ospf_peerings == "yes" %>
  # Backbone
  area 0 {
    networks {
      <%= @range_ipv4 %>;
    };
<% peerings = YAML.load_file(@ospf_peerings); -%>
<% peerings.each_pair do |name,node| -%>
    interface "ospf-<%=name%>" {
      cost <%= node['cost'] %>;
      type pointopoint;
      hello 5; retransmit 2; wait 10; dead 20;
      check link;
      authentication none;
    };

<% end -%>
  };
<% end %>

<% if @have_ospf_links == "yes" %>
  area 10 {
<% peerings = YAML.load_file(@ospf_links); -%>
<% peerings.each_pair do |name,node| -%>
    interface "ospf-<%=name%>" {
      cost <%= node['cost'] %>;
      type pointopoint;
      hello 5; retransmit 2; wait 10; dead 20;
      check link;
      authentication none;
    };

<% end -%>
<% end %>
    interface "br-<%= @mesh_code %>" {
      cost 70;
      stub;
    };
  };
}
