filter import_ebgp_<%= @name.gsub('-', '_') %> {
  if is_default() then accept;
  if is_global_unicast() then accept;
  reject;
}

filter export_ebgp_<%= @name.gsub('-', '_') %> {
  if (source = RTS_BGP || source = RTS_DEVICE || source = RTS_STATIC) then {
    if is_self_<%= @mesh_code.gsub('-', '_') %>() then accept;
<% @peers.each do |tunnel,args| -%>
<% array = args.split(';') -%>
<% if array[2].to_s != "" -%>
<% exports = array[2].split(',') -%>
<% exports.each do |expnet| -%>
    if net = <%= expnet %> then accept;
<% end -%>
<% end -%>
<% end -%>
  }
  reject;
}

template bgp ebgp_<%= @name.gsub('-', '_') %> {
  table mesh;
  local as <%= @our_as %>;
};
